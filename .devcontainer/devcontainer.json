{
  "name": "universal-dev-with-claude",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "HTTP_PROXY": "${localEnv:HOST_PROXY_URL}",
      "HTTPS_PROXY": "${localEnv:HOST_PROXY_URL}",
      "NO_PROXY": "${localEnv:NO_PROXY}"
    }
  },
  "initializeCommand": "bash -lc 'if [ -z \"${localEnv:PROJECT_PATH}\" ]; then echo \"[devcontainer] PROJECT_PATH is not set. Use scripts/open-project.sh or set dev.containers.defaultEnv.PROJECT_PATH\" >&2; exit 1; fi; if [ ! -d \"${localEnv:PROJECT_PATH}\" ]; then echo \"[devcontainer] PROJECT_PATH=\"\"${localEnv:PROJECT_PATH}\"\" is not a directory or not shared with Docker. On macOS, add its parent to Docker Desktop → Settings → Resources → File Sharing.\" >&2; exit 1; fi'",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "os-provided"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "sudo bash /universal/.devcontainer/init-firewall.sh || true && bash /universal/.devcontainer/bootstrap-claude.sh",
  "postStartCommand": "sudo bash /universal/.devcontainer/init-firewall.sh || true",
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--add-host=host.docker.internal:host-gateway"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/universal,type=bind",
    "source=${localEnv:PROJECT_PATH},target=/workspace,type=bind"
  ],
  "remoteEnv": {
    "PROJECT_PATH": "${localEnv:PROJECT_PATH}",
    "CLAUDE_LOGIN_METHOD": "${localEnv:CLAUDE_LOGIN_METHOD}",
    "CLAUDE_ORG_UUID": "${localEnv:CLAUDE_ORG_UUID}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "CLAUDE_CODE_API_KEY_HELPER_TTL_MS": "${localEnv:CLAUDE_CODE_API_KEY_HELPER_TTL_MS}",
    "ENABLE_CLAUDE_SANDBOX": "${localEnv:ENABLE_CLAUDE_SANDBOX}",
    "HTTP_PROXY": "${localEnv:HOST_PROXY_URL}",
    "HTTPS_PROXY": "${localEnv:HOST_PROXY_URL}",
    "ALL_PROXY": "${localEnv:ALL_PROXY}",
    "NO_PROXY": "${localEnv:NO_PROXY}"
  },
  "containerEnv": {
    "PROJECT_PATH": "${localEnv:PROJECT_PATH}",
    "CLAUDE_CODE_API_KEY_HELPER_TTL_MS": "${localEnv:CLAUDE_CODE_API_KEY_HELPER_TTL_MS}",
    "ENABLE_CLAUDE_SANDBOX": "${localEnv:ENABLE_CLAUDE_SANDBOX}",
    "HTTP_PROXY": "${localEnv:HOST_PROXY_URL}",
    "HTTPS_PROXY": "${localEnv:HOST_PROXY_URL}",
    "ALL_PROXY": "${localEnv:ALL_PROXY}",
    "NO_PROXY": "${localEnv:NO_PROXY}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "dev.containers.copyGitConfig": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "waitFor": "postStartCommand",
  "forwardPorts": [
    3000,
    5173,
    8000,
    9003,
    1024,
    4444
  ]
}
