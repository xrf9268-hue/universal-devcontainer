{
  "name": "Project with Advanced Claude Code Plugins",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/xrf9268-hue/features/claude-code:1": {
      "loginMethod": "host",
      "bypassPermissions": true,
      "installPlugins": "",
      "enableSandbox": false
    },
    "ghcr.io/xrf9268-hue/features/claude-code-plugins:1": {
      "installPlugins": "essential",
      "addMarketplace": true,
      "replaceDefaultPlugins": false
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python"
      ]
    }
  },

  "forwardPorts": [3000, 8000],

  "postCreateCommand": "npm --version && python --version && claude /doctor",

  "remoteUser": "vscode"
}
